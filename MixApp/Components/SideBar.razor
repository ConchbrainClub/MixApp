@inherits MixApp.Components.SideBarBase

<nav class="sidebar">
    <div class="top">
        <NavLink Href="/">
            <div @onclick=@(_ => ActivePage = "Home") class=@(ActivePage == "Home" ? "active":string.Empty)>
                @if (ActivePage == "Home")
                {
                    <FluentIcon Value="@(new Icons.Filled.Size24.Home())" class="animate__animated animate__rubberBand" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.Home())" />
                }
                <span>Home</span>
            </div>
        </NavLink>

        <NavLink Href="/softwares">
            <div @onclick=@(_ => ActivePage = "Apps") class=@(ActivePage == "Apps" ? "active":string.Empty)>
                @if (ActivePage == "Apps")
                {
                    <FluentIcon Value="@(new Icons.Filled.Size24.Apps())" class="animate__animated animate__rubberBand" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.Apps())" />
                }
                <span>Apps</span>
            </div>
        </NavLink>

        <NavLink Href="/counter">
            <div @onclick=@(_ => ActivePage = "Library") class=@(ActivePage == "Library" ? "active":string.Empty)>
                @if (ActivePage == "Library")
                {
                    <FluentIcon Value="@(new Icons.Filled.Size24.Library())" class="animate__animated animate__rubberBand" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.Library())" />
                }
                <span>Library</span>
            </div>
        </NavLink>
    </div>

    <div class="bottom">
        <NavLink href="/counter">
            <div @onclick=@(_ => ActivePage = "Setting") class=@(ActivePage == "Setting" ? "active":string.Empty)>
                @if (ActivePage == "Setting")
                {
                    <FluentIcon Value="@(new Icons.Filled.Size24.Settings())" class="animate__animated animate__rubberBand" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.Settings())" />
                }
                <span>Setting</span>
            </div>
        </NavLink>

        <NavLink href="/counter">
            <div @onclick=@(_ => ActivePage = "Help") class=@(ActivePage == "Help" ? "active":string.Empty)>
                @if (ActivePage == "Help")
                {
                    <FluentIcon Value="@(new Icons.Filled.Size24.ChatHelp())" class="animate__animated animate__rubberBand" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.ChatHelp())" />
                }
                <span>Help</span>
            </div>
        </NavLink>
    </div>
</nav>

<style>
    .active {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .sidebar {
        width: 70px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 5px;
    }

    .sidebar .top,
    .sidebar .bottom {
        width: 100%;
    }

    .sidebar button:hover {}

    .sidebar .top div,
    .sidebar .bottom div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        padding: 8px 0 4px 0;
        border-radius: 7px;
        box-sizing: border-box;
        margin: 2px;
    }

    .sidebar a {
        font-size: 12px;
        font-family: Arial, Helvetica, sans-serif;
        text-decoration: none;
    }
</style>