@inherits MixApp.Shared.MainLayoutBase

<FluentDesignSystemProvider NeutralBaseColor="#1a1a1a" FillColor="#333333" BaseLayerLuminance="0">
    <div class="layout">
        <SideBar></SideBar>

        <div class="main">
            <SearchBox />

            <FluentStack class="container" Orientation="Orientation.Vertical"
                HorizontalAlignment="HorizontalAlignment.Center">
                @Body
            </FluentStack>
        </div>

        <Detail Software=@Software OnDismiss="@(args => Software = null)" />
    </div>
</FluentDesignSystemProvider>

<style>
    .layout {
        height: 100vh;
        display: flex;
    }

    .main {
        text-align: center;
        width: calc(100% - 210px);
        margin: 0 auto;
        text-decoration: none;
    }

    .main > .container {
        height: calc(100vh - 75px);
        overflow-y: scroll;
        text-align: left;
        padding: 0 10px;
    }

    @@media only screen and (max-width: 950px) {
        .sidebar {
            display: none;
        }

        .main {
            width: calc(100% - 10px);
            margin: 0;
        }

        .main > .container {
            padding: 10px 20px;
            height: 100vh;
        }

        .main > .search {
            display: none;
        }
    }

    @@media only screen and (max-width: 700px) {
        .main {
            width: 100%;
        }

        .main > .container {
            padding: 10px 20px;
            height: 100vh;
        }
    }
</style>