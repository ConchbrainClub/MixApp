@inherits MixApp.Shared.MainLayoutBase

<FluentDesignSystemProvider NeutralBaseColor="#1a1a1a" FillColor="#333333" BaseLayerLuminance="0">
    <div class="layout">
        
        <nav class="sidebar">
            <div class="top">
                <a href="/">

                    <div>
                        <FluentButton IconEnd="@(new Icons.Regular.Size32.Home())" Appearance="Appearance.Stealth"></FluentButton>
                        <span>Home</span>
                    </div>
                </a>
                <a href="/software">
                    <div>
                        <FluentButton IconEnd="@(new Icons.Regular.Size32.Home())" Appearance="Appearance.Stealth"></FluentButton>
                        <span>Software</span>
                    </div>
                </a>
            </div>
            <div class="bottom">
                <a href="/counter">
                    <div>
                        <FluentButton IconEnd="@(new Icons.Regular.Size32.Cloud())" Appearance="Appearance.Stealth"></FluentButton>
                         <span>
                            Cloud
                         </span>
                    </div>
                </a>
                <a href="/counter">
                    <div>
                        <FluentButton IconEnd="@(new Icons.Regular.Size32.Settings())" Appearance="Appearance.Stealth"></FluentButton>
                        <span>Bettery</span>
                    </div>
                </a>
            </div>
        </nav>
        <div class="main">
            <SearchBox />

            <FluentStack class="container" Orientation="Orientation.Vertical"
                HorizontalAlignment="HorizontalAlignment.Center">
                @Body
            </FluentStack>
        </div>

        <Detail Software=@Software OnDismiss="@(args => Software = null)" />
    </div>
</FluentDesignSystemProvider>

<style>
    .layout {
        height: 100vh; 
        display: flex;
    }

    .sidebar {
        width: 150px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px 0;
    }

    .sidebar .top,
    .sidebar .bottom {
        width: 100%;
    }
    .sidebar .top div,
    .sidebar .bottom div{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items:center;
        text-align: center;
        line-height: 30px;
        margin: 10px 0;
    }
    .sidebar a{
        font-size: 14px;
        font-family: Arial, Helvetica, sans-serif;
        text-decoration: none;
    }

    .main {
        text-align: center;
        width: calc(100% - 210px);
        margin: 0 auto;
        text-decoration: none;
    }

    .main>.container {
        height: calc(100vh - 70px);
        overflow-y: scroll;
        text-align: left;
        padding: 0 10px;
    }

    @@media only screen and (max-width: 950px) {
        .sidebar {
            display: none;
        }

        .main {
            width: calc(100% - 10px);
            margin: 0;
        }

        .main>.container {
            padding: 10px 20px;
            height: 100vh;
        }

        .main>.search {
            display: none;
        }
    }

    @@media only screen and (max-width: 700px) {
        .main {
            width: 100%;
        }

        .main>.container {
            padding: 10px 20px;
            height: 100vh;
        }
    }
</style>