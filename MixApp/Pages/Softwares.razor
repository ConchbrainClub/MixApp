@page "/softwares"
@inherits MixApp.Pages.SoftwaresBase

@using MixApp.Models

<BaseLayerLuminance>
    <FluentStack class="page" Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center" >

        <div class="content">
            @foreach (Software software in Softwares)
            {
                <FluentCard BackReference="@context" class="animate__animated animate__fadeIn">
                    <div>
                        <p>@software.PackageIdentifier?.Split(".").First()</p>
                        <FluentDivider></FluentDivider>
                        <h3 class="title">@software.PackageIdentifier?.Split(".").Last()</h3>

                        <FluentBadge Appearance="Appearance.Neutral">
                            @software.Publisher
                        </FluentBadge>

                        <p class="desc">@software.ShortDescription</p>
                    </div>

                    <div class="action">
                        <FluentButton IconEnd="@(new Icons.Regular.Size16.ArrowCircleDown())">
                            Download
                        </FluentButton>

                        <FluentButton @onclick=@(_ => SelectedSoftware = software) Appearance="Appearance.Accent">
                            More Info
                        </FluentButton>
                    </div>
                </FluentCard>
            }
        </div>

        <FluentProgressRing class="progress"></FluentProgressRing>

    </FluentStack>

    <Detail Software=@SelectedSoftware />
</BaseLayerLuminance>

<style>
    .page {
        height: 100%;
        overflow-y: scroll;
    }

    .content {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-gap: 1em;
        margin-top: 20px;
    }

    @@media only screen and (max-width: 1400px) {
        .content {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media only screen and (max-width: 1200px) {
        .content {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media only screen and (max-width: 950px) {
        .content {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    fluent-card {
        padding: 20px 20px 60px 20px;
        position: relative;
        overflow: hidden;
    }

    .title {
        margin: 0.75rem 0;
    }

    .desc {
        margin-top: 10px;
    }

    .action {
        margin: 1.2rem 0;
        position: absolute;
        bottom: 0;
    }
    
    .action fluent-button {
        margin-right: 5px;
    }

    .progress {
        margin: 10px; 
        width: 42px;
        height: 42px;
    }
</style>