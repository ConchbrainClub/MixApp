@page "/"
@inherits MixApp.Pages.IndexBase
@using MixApp.Models

<BaseLayerLuminance>
    <FluentHorizontalScroll class="banner" Speed="2000" Easing=ScrollEasing.EaseInOut >
         @foreach (Software software in Softwares)
        {
            <FluentCard @onclick=@(_ => GlobalEvent.OpenSoftware(software)) Appearance="Appearance.Accent">
                <lable class="packageName">@software.PackageName</lable>
                <lable class="shortDescription">@software.ShortDescription</lable>
                <img src=@software.Cover class="cover">
            </FluentCard>
        }
    </FluentHorizontalScroll>

    <div class="content">
         @foreach (Software software in RandomSoftwares)
        {
        <FluentCard BackReference="@context" class="animate__animated animate__fadeIn">
            <div>
                <p>@software.PackageIdentifier</p>
                <FluentDivider></FluentDivider>
                <h3 class="title">@software.PackageName</h3>

                <FluentBadge Appearance="Appearance.Neutral">
                    @software.Publisher
                </FluentBadge>

                <p class="desc">@software.ShortDescription</p>
            </div>

            <div class="action">
                <FluentButton @onclick=@(_ => GlobalEvent.OpenSoftware(software)) Appearance="Appearance.Accent">
                    More Info
                </FluentButton>
            </div>
        </FluentCard>
        }
    </div>

</BaseLayerLuminance>

<style>
    .banner {
        width: 100%;
        margin-top: 10px;
    }

    .banner fluent-card {
        margin-right: 10px;
        height: 390px;
        width: 710px;
        position: relative;
    }

    .content {
        display: grid; 
        grid-template-columns: repeat(5, 1fr); 
        grid-gap: 1em;
    }

    .cover{
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
        -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 1), transparent);
     }

    .packageName {
        font-size: 20px;
        font-weight: bold;
        position: absolute;
        top: 45%;
        left: 6%;
        z-index: 1;
    }

    .banner fluent-card:hover {
        -webkit-box-shadow: 0 0 6px #999;
        box-shadow: 0 0 6px #999;
        -webkit-transition: all .5s ease-out;
        transition: all .5s ease-out;
    }
    
    .shortDescription{
        max-width: 400px;
        font-size: 14px;
        position: absolute;
        top: 55%;
        left: 6%;
        z-index: 1;
    }
    @@media only screen and (max-width: 1400px) {
        .content {
            grid-template-columns: repeat(4, 1fr); 
        }
    }

    @@media only screen and (max-width: 1200px) {
        .content {
            grid-template-columns: repeat(3, 1fr); 
        }
    }
    
    @@media only screen and (max-width: 950px) {
        .content {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media only screen and (max-width: 700px) {
        .content {
            width: 100%;
            grid-template-columns: repeat(1, 1fr);
        }
    }

    
    .title {
        margin: 0.75rem 0;
    }

    .desc {
        margin-top: 10px;
    }

    .action {
        margin: 1.2rem 0;
        position: absolute;
        bottom: 0;
    }
    
    .action fluent-button {
        margin-right: 5px;
    }

    .progress {
        margin: 10px; 
        width: 42px;
        height: 42px;
    }
</style>