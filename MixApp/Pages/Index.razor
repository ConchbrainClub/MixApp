@page "/"
@inherits MixApp.Pages.IndexBase
@using MixApp.Models

<BaseLayerLuminance>
    <FluentHorizontalScroll class="banner" Speed="2000" Easing=ScrollEasing.EaseInOut >
         @foreach (Software software in Softwares)
        {
            <FluentCard @onclick=@(_ => GlobalEvent.OpenSoftware(software)) Appearance="Appearance.Accent">
                <lable class="packageName">@software.PackageName</lable>
                <lable class="shortDescription">@software.ShortDescription</lable>
                <img src=@(HttpClient?.BaseAddress + software.Cover) class="cover">
                <div class="mask">

                </div>
            </FluentCard>
        }
    </FluentHorizontalScroll>

    <div class="content">
        @foreach (Software software in RandomSoftwares)
        {
            <FluentCard BackReference="@context" class="animate__animated animate__fadeIn">
                <div>
                    <p>@software.PackageIdentifier</p>
                    <FluentDivider></FluentDivider>
                    <div class="iconBox">
                        <div>
                            <h3 class="title">@software.PackageName</h3>
                            <FluentBadge Appearance="Appearance.Neutral">
                                @software.Publisher
                            </FluentBadge>
                        </div>
                        <img class="icons" src=@("http://" + new Uri(software.PackageUrl ??string.Empty).Host + "/favicon.ico") />
                    </div>
                    <p class="desc">@software.ShortDescription</p>
                </div>

                <div class="action">
                    <FluentButton IconEnd="@(new Icons.Regular.Size16.Star())">
                        Star
                    </FluentButton>

                    <FluentButton @onclick=@(_ => GlobalEvent.OpenSoftware(software)) Appearance="Appearance.Accent">
                        More Info
                    </FluentButton>
                </div>
            </FluentCard>
        }
    </div>

</BaseLayerLuminance>

<style>
    .banner {
        width: 100%;
        margin-top: 10px;
    }

    .banner fluent-card {
        margin-right: 10px;
        height: 390px;
        width: 710px;
        position: relative;
    }

    .content {
        display: grid; 
        grid-template-columns: repeat(5, 1fr); 
        grid-gap: 1em;
    }

    .content fluent-card {
        padding: 20px 20px 60px 20px;
        position: relative;
        overflow: hidden;
    }

    .cover{
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
     }

    .mask {
        width: 100%;
        height: 100%;
        position:absolute;
        top:0%;
        left: 0%;
        z-index: 3;
        background: linear-gradient(to right, rgba(0, 0, 0, .5), rgba(255, 255, 255, 0));
    }

    .packageName {
        font-size: 20px;
        font-weight: bold;
        position: absolute;
        top: 45%;
        left: 6%;
        z-index: 4;
    }

    .banner fluent-card:hover {
        -webkit-box-shadow: 0 0 6px #999;
        box-shadow: 0 0 6px #999;
        -webkit-transition: all .5s ease-out;
        transition: all .5s ease-out;
    }
    
    .shortDescription{
        max-width: 400px;
        font-size: 14px;
        position: absolute;
        top: 55%;
        left: 6%;
        z-index: 4;
    }

    @@media only screen and (max-width: 1400px) {
        .content {
            grid-template-columns: repeat(4, 1fr); 
        }
    }

    @@media only screen and (max-width: 1200px) {
        .content {
            grid-template-columns: repeat(3, 1fr); 
        }
    }
    
    @@media only screen and (max-width: 950px) {
        .content {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media only screen and (max-width: 700px) {
        .content {
            width: 100%;
            grid-template-columns: repeat(1, 1fr);
        }
    }

    .title {
        margin: 0.75rem 0;
    }

    .desc {
        margin-top: 10px;
    }

    .action {
        margin: 1.2rem 0;
        position: absolute;
        bottom: 0;
    }
    
    .action fluent-button {
        margin-right: 5px;
    }

    .progress {
        margin: 10px; 
        width: 42px;
        height: 42px;
    }
    
    .iconBox{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        box-sizing: border-box;
    }

    .icons{
        width: 40px;
        height: 40px;
        margin-top: 20px;
        margin-left: 7px;
        border-radius: 5px;
    }
</style>