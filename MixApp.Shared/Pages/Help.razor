@page "/Help"

@inject LocaleManager LM

<PageTitle>@LM.Scripts["p.help.help"]</PageTitle>

<div class="page">
    <h2>@LM.Scripts["p.help.help"]</h2>

    <div style="display: flex; flex-wrap: wrap;">
        <FluentAccordion class="feedback">
            <FluentAccordionItem Heading=@LM.Scripts["p.help.feedback"] Expanded="true">
                <FluentIcon Slot="start" Value="@(new Icons.Regular.Size24.PersonFeedback())" Color=Color.Neutral />

                <iframe width="100%" height="800px" src="https://forms.office.com/r/0ync4L7JC7?embed=true" frameborder="0" marginwidth="0" marginheight="0" style="border: none; max-width:100%; max-height:100vh" allowfullscreen webkitallowfullscreen mozallowfullscreen msallowfullscreen> </iframe>
            </FluentAccordionItem>
        </FluentAccordion>

        <FluentAccordion class="about">
            <FluentAccordionItem Heading=@LM.Scripts["p.help.about"] Expanded="true">
                <FluentIcon Slot="start" Value="@(new Icons.Regular.Size24.ChatHelp())" Color=Color.Neutral />

                <FluentStack class="content">
                    <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
                        <img class="icon" src="/favicon.png"/>
                        <h5>MixStore</h5>
                        <p>
                            Developed by the 
                            <a href="https://www.conchbrain.club">ConchbrainClub</a>
                            ❤ with the help of our 
                            <a href="https://github.com/orgs/ConchbrainClub/people" target="_blank">
                                <strong>contributors</strong>
                            </a>
                        </p>

                        <p>
                            <span>© 2023 - Conchbrain Club</span>
                            &nbsp;<strong><a href="https://beian.miit.gov.cn/" target="_blank">豫ICP备18041216号-5</a></strong>
                        </p>
                    </FluentStack>
                </FluentStack>
            </FluentAccordionItem>
        </FluentAccordion>
    </div>
</div>

<style>
    .page {
        width: 100%;
        padding: 10px;
    }

    .page .region {
        padding: 0;
    }

    .page .feedback {
        width: 70%;
        padding: 10px;
    }

    .page .about {
        width: 30%;
        padding: 10px;
    }

    @@media only screen and (max-width: 800px) {
        .page .feedback, .page .about {
            width: 100%;
            padding: 0;
        }
    }

    .page .content {
        padding: 10px;
    }

    .page .title {
        margin: 10px;
    }

    .page .icon {
        height: 24px;
        width: 24px;
    }
</style>